{
  "name": "stable-center-backend",
  "version": "1.0.0",
  "description": "Cross-chain swap API backend with 1inch Fusion integration",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node --watch server.ts",
    "build": "tsc --project tsconfig.json",
    "build:start": "npm run build && npm start",
    "test": "node test/full-cross-chain-test.js",
    "test:defi": "node test/defi-api-test.js",
    "setup": "node setup-env.js",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "defi",
    "cross-chain",
    "swap",
    "1inch",
    "fusion"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@1inch/cross-chain-sdk": "^0.1.15",
    "axios": "^1.6.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.11.1",
    "express": "^4.18.2",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
